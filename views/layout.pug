        // ---------------- ESTILOS BASE ----------------
        style.
            body {
                display: flex;
                min-height: 100vh;
                margin: 0;
                font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, Arial, sans-serif;
                background-color: #f0f8ff;
            }

            /* ---------- SIDEBAR ---------- */
            .sidebar {
                width: 250px;
                background-color: #2e8b57;
                padding: 22px;
                color: white;
                position: fixed;
                top: 0;
                bottom: 0;
            }

            .sidebar .logo {
                text-align: center;
                margin-bottom: 25px;
            }

            .sidebar .logo img {
                width: 90px;
                border-radius: 50%;
                margin-bottom: 10px;
            }

            .sidebar h1 {
                font-size: 20px;
                font-weight: 700;
                color: goldenrod;
                margin: 0;
            }

            .sidebar nav ul {
                list-style: none;
                padding: 0;
                margin: 20px 0 0;
            }

            .sidebar nav ul li {
                margin: 6px 0;
            }

            .sidebar nav ul li a {
                color: white;
                text-decoration: none;
                padding: 10px 12px;
                display: flex;
                align-items: center;
                gap: 10px;
                border-radius: 6px;
                font-size: 15px;
                font-weight: 500;
                transition: background-color 0.25s, color 0.25s;
            }

            .sidebar nav ul li a:hover,
            .sidebar nav ul li a.active {
                background-color: #f0f8ff;
                color: #2e8b57;
                border: 1px solid goldenrod;
            }

            /* ---------- CONTENIDO ---------- */
            .content {
                flex: 1;
                padding: 25px;
                margin-left: 270px;
                min-height: 100vh;
            }

            .contact-info {
                margin-top: 30px;
                font-size: 13px;
                color: #e0f2e9;
            }

