doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Consultorio M√©dico

    //- ---------------- LIBRER√çAS EXTERNAS ----------------
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet")

    //- ---------------- SCRIPTS BASE ----------------
    script(src="https://code.jquery.com/jquery-3.5.1.js")
    script(src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")

    //- ---------------- ESTILOS UNIFICADOS ----------------
    style.
      :root {
        --primary-color: #0a3d62;
        --secondary-color: #1e7f5c;
        --accent-color: #daa520;
        --bg-color: #f0f8ff;
        --sidebar-bg: rgba(10, 61, 98, 0.95); 
        --text-light: #ffffff;
        --text-dark: #2e2e2e;
      }

      body {
        display: flex;
        min-height: 100vh;
        margin: 0;
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-color);
        color: var(--text-dark);
      }

      /* ---------- SIDEBAR ---------- */
      .sidebar {
        width: 260px;
        background-color: var(--sidebar-bg);
        backdrop-filter: blur(10px);
        padding: 30px 20px;
        color: var(--text-light);
        position: fixed;
        top: 0; bottom: 0;
        display: flex;
        flex-direction: column;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
        z-index: 1000;
      }

      .sidebar .logo { text-align: center; margin-bottom: 25px; }
      .sidebar .logo img {
        width: 85px; height: 85px; object-fit: cover;
        border-radius: 50%; border: 3px solid var(--accent-color);
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        margin-bottom: 12px;
        background-color: white;
      }
      
      .logo-placeholder {
        width: 85px; height: 85px; border-radius: 50%;
        background: var(--accent-color); color: var(--primary-color);
        display: flex; align-items: center; justify-content: center;
        margin: 0 auto 12px; font-size: 40px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
      }

      .sidebar h1 { font-size: 18px; font-weight: 700; color: var(--accent-color); margin: 0; line-height: 1.2; }
      .user-badge { font-size: 13px; color: #ddd; margin-top: 5px; display: block; }

      .sidebar nav { flex-grow: 1; margin-top: 20px; overflow-y: auto; }
      .sidebar nav ul { list-style: none; padding: 0; margin: 0; }
      .sidebar nav ul li { margin: 5px 0; }
      .sidebar nav ul li a {
        color: rgba(255, 255, 255, 0.85); text-decoration: none;
        padding: 10px 15px; display: flex; align-items: center;
        gap: 12px; border-radius: 8px; font-size: 14px;
        transition: all 0.2s ease;
      }

      .sidebar nav ul li a:hover, .sidebar nav ul li a.active {
        background-color: var(--text-light);
        color: var(--primary-color);
        font-weight: 600;
        transform: translateX(5px);
      }

      .logout-btn {
        margin-top: auto;
        color: #ff7675 !important;
        border: 1px solid rgba(255, 118, 117, 0.3);
      }
      .logout-btn:hover { background-color: #ff7675 !important; color: white !important; }

      /* ---------- √ÅREA DE CONTENIDO ---------- */
      .content {
        flex: 1;
        padding: 40px;
        margin-left: 260px;
        min-height: 100vh;
      }

  body
    if usuario
      aside.sidebar
        .logo
          img#mainLogo(src="/images/logo.png" alt="Logo" onerror="this.style.display='none'; document.getElementById('logoFallback').style.display='flex';")
          #logoFallback.logo-placeholder(style="display:none;")
            i.fa-solid.fa-hospital-user
          h1 Consultorio M√©dico
          span.user-badge Hola, #{usuario.nombre}
        
        nav
          ul
            li: a(href="/" class=(page==='inicio' ? 'active' : ''))
              i.fa-solid.fa-house
              span Inicio

            //- SOLO ADMIN (Rol 1)
            if usuario.id_rol === 1
              li: a(href="/medicos" class=(page==='medicos' ? 'active' : ''))
                i.fa-solid.fa-user-doctor
                span M√©dicos
              li: a(href="/especialidades" class=(page==='especialidades' ? 'active' : ''))
                i.fa-solid.fa-stethoscope
                span Especialidades

            //- ADMIN Y SECRETARIA (Rol 1 y 2)
            if usuario.id_rol === 1 || usuario.id_rol === 2
              li: a(href="/agendas" class=(page==='agendas' ? 'active' : ''))
                i.fa-solid.fa-calendar-days
                span Agendas
              li: a(href="/pacientes" class=(page==='pacientes' ? 'active' : ''))
                i.fa-solid.fa-user
                span Pacientes
              li: a(href="/obrassociales" class=(page==='obras' ? 'active' : ''))
                i.fa-solid.fa-hospital
                span Obras Sociales
              li: a(href="/secretaria" class=(page==='secretaria' ? 'active' : ''))
                i.fa-solid.fa-clipboard-user
                span Secretar√≠a
            
            //- BOT√ìN CERRAR SESI√ìN
            li: a.logout-btn(href="/auth/logout")
              i.fa-solid.fa-right-from-bracket
              span Cerrar Sesi√≥n

        .contact-info.mt-3.small.text-center(style="color: rgba(255,255,255,0.4)")
          p.mb-1 üìû (123) 456-7890
          p.mb-0 ‚úâ info@consultorio.com

    main.content
      block contenido