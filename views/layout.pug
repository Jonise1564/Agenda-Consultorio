    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")

    //- ---------------- ESTILOS UNIFICADOS ----------------
    style.
      :root {
        --primary-color: #0a3d62;
        --secondary-color: #1e7f5c;
        --accent-color: #daa520;
        --bg-color: #f0f8ff;
        --sidebar-bg: rgba(10, 61, 98, 0.95); 
        --text-light: #ffffff;
        --text-dark: #2e2e2e;
      }

      body {
        display: flex;
        min-height: 100vh;
        margin: 0;
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-color);
        color: var(--text-dark);
      }

      /* ---------- SIDEBAR ---------- */
      .sidebar {
        width: 200px;
        background-color: var(--sidebar-bg);
        backdrop-filter: blur(10px);
        padding: 30px 20px;
        color: var(--text-light);
        position: fixed;
        top: 0; bottom: 0;
        display: flex;
        flex-direction: column;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
        z-index: 1000;
      }

      .sidebar .logo { text-align: center; margin-bottom: 25px; }
      .sidebar .logo img {
        width: 85px; height: 85px; object-fit: cover;
        border-radius: 50%; border: 3px solid var(--accent-color);
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        margin-bottom: 12px;
        background-color: white;
      }
      
      .logo-placeholder {
        width: 85px; height: 85px; border-radius: 50%;
        background: var(--accent-color); color: var(--primary-color);
        display: flex; align-items: center; justify-content: center;
        margin: 0 auto 12px; font-size: 40px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
      }

      .sidebar h1 { font-size: 18px; font-weight: 700; color: var(--accent-color); margin: 0; line-height: 1.2; }
      .user-badge { font-size: 13px; color: #ddd; margin-top: 5px; display: block; }

      .sidebar nav { flex-grow: 1; margin-top: 20px; overflow-y: auto; }
      .sidebar nav ul { list-style: none; padding: 0; margin: 0; }
      .sidebar nav ul li { margin: 5px 0; }
      .sidebar nav ul li a {
        color: rgba(255, 255, 255, 0.85); text-decoration: none;
        padding: 10px 15px; display: flex; align-items: center;
        gap: 12px; border-radius: 8px; font-size: 14px;
        transition: all 0.2s ease;
      }

      .sidebar nav ul li a:hover, .sidebar nav ul li a.active {
        background-color: var(--text-light);
        color: var(--primary-color);
        font-weight: 600;
        transform: translateX(5px);
      }

      .logout-btn {
        margin-top: auto;
        color: #ff7675 !important;
        border: 1px solid rgba(255, 118, 117, 0.3);
      }
      .logout-btn:hover { background-color: #ff7675 !important; color: white !important; }

      /* ---------- √ÅREA DE CONTENIDO ---------- */
      .content {
        flex: 1;
        padding: 40px;
        margin-left: 200px; /* Ajustado al ancho real de la sidebar */
        min-height: 100vh;
      }

  body
